# Minecraft Bot Connection Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
MC_SERVER_HOST=localhost
MC_SERVER_PORT=25565

# Bot Account Credentials
MC_BOT_USERNAME=bot_name
MC_BOT_PASSWORD=your_password_here

# Authentication (for offline mode servers, leave empty or set to false)
MC_AUTH_METHOD=microsoft
# Options: microsoft, mojang, offline

# Server Version
MC_VERSION=1.20.1

# Connection Timeout (in milliseconds)
MC_CONNECT_TIMEOUT=30000

# Reconnect Configuration
MC_AUTO_RECONNECT=true
MC_RECONNECT_DELAY=5000
MC_MAX_RECONNECT_ATTEMPTS=10

# Logging Configuration
LOG_LEVEL=info
# Options: debug, info, warn, error

# Bot Behavior
BOT_AUTO_RESPAWN=true
BOT_CHAT_RESPONSES=true
BOT_MOVEMENT_ENABLED=true

# API Configuration (optional)
API_ENABLED=false
API_HOST=localhost
API_PORT=3000
